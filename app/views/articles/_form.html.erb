<div class="container">
  <%= render "shared/errors", obj: article %>
  <div class="row justify-content-center my-4">
    <%= form_with(model: article, class: "shadow mb-3 bg-body rounded p-4") do |form| %> 
      <div class="form-group row mb-4">
        <%= form.label :title, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= form.text_field :title, class: "form-control shadow", placeholder: "Enter title", autofocus: true %>
        </div>
      </div>
    
      <div class="form-group row mb-4">
        <%= form.label :description, class: "col-2 col-form-label" %> 
        <div class="col-10">
          <%= form.text_area :description, rows: 10, class: "form-control shadow", placeholder: "Enter description" %>
        </div>
      </div>

      <div class="form-group row">
        <%= form.label :category, class: "col-2 col-form-label" %> 
        <div class="col-10">
          <%= form.collection_select(:category_ids, Category.all, :id, :name, 
            {prompt: "Please select some categories"}, 
            {multiple: true, size: 3, class: "form-select shadow rounded"})  %>
        </div>
      </div>
    
      <div class="form-group mt-4">
        <%= form.submit class: "btn btn-outline-dark shadow d-block m-auto btn-lg" %>
      </div>
    <% end %>
  </div>
  <div class="text-center ">
    <%= link_to "Back to articles", articles_path, class: "text-info shadow rounded p-2" %>
  </div>
</div>