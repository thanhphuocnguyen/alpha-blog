<p style="color: green"><%= notice %></p>

<h1>Articles</h1>

<table id="articles">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
    <!-- <%= render article %> -->
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td colspan="3">
        <span> <%= link_to "Show", article %> </span>
        <span> <%= link_to "Edit", edit_article_path(article)%> </span>
        <span> <%= link_to "Delete", article, data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %> </span>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<div><%= link_to "New article", new_article_path %></div>
