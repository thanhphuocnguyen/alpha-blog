<h1 class="text-center my-4">Category: <%= @category.name %></h1>
<% if logged_in? && current_user.admin? %>
    <div class="text-center">
        <%= link_to "Edit category", edit_category_path(@category), class: "btn btn-info" %>
        <%= link_to "Delete category", @category, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
<% end %>
<div class="flickr_pagination">
    <%= will_paginate @category_articles, :container => false %>
</div>
<h3 class="text-center my-4">Articles</h3>
<%= render "articles/articles", articles: @category_articles %>
<div class="flickr_pagination">
    <%= will_paginate @category_articles, :container => false %>
</div>