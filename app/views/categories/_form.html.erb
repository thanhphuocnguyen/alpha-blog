
<div class="col-10 mx-auto">
    <%= render "shared/errors", obj: @category %>
    <div class="row justify-content-center gy-4">
        <%= form_with(model: @category, class: "shadow mb-3 bg-body rounded p-4") do |form| %>
            <div class="form-group row">
                <%= form.label :name, "Category name", class: "col-2 col-form-label" %>
                <div class="col-10">
                    <%= form.text_field :name, class: "form-control shadow", placeholder: "Enter new category", autofocus: true %>
                </div>
            </div>
            <div class="form-group mt-4">
                <%= form.submit "Add", class: "btn btn-outline-dark shadow d-block m-auto btn-lg" %>
            </div>
        <% end %>
    </div>
</div>