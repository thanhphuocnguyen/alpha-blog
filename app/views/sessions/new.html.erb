<h2 class="text-center my-4">Login</h2>

<div class="col-10 mx-auto">
  <div class="row justify-content-center gy-4">
    <%= form_with(scope: :session, url: login_path, class: "shadow mb-3 bg-body rounded p-4", local: true) do |form| %>
    <div class="form-group row">
      <%= form.label :email, class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= form.text_field :email, class: "form-control shadow", placeholder: "abcd123@example.com", autofocus: true %>
      </div>
    </div>
    <div class="form-group row mt-4">
      <%= form.label :password, class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= form.password_field :password, rows: 10, class: "form-control shadow", placeholder: "Enter password..." %>
      </div>
    </div>

    <div class="form-group mt-4">
      <%= form.submit "Log in", class: "btn btn-outline-dark shadow d-block m-auto btn-lg" %>
    </div>
    <% end %>
  </div>
</div>
